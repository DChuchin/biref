{
  "name": "parcel-boilerplate",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier --write 'src/**/*.{js,css,scss}'",
    "start": "yarn clean && parcel watch src/app.js",
    "build": "yarn clean && parcel build src/app.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "autoprefixer": "^9.6.1",
    "husky": "^3.0.2",
    "parcel-bundler": "latest",
    "parcel-plugin-imagemin": "^3.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "sass": "^1.22.9"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "smoothscroll-polyfill": "^0.4.4"
  }
}
